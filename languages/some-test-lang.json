{
  "description": "This is the long description of the language. it is gonna be md formatted",
  "features": {
    "general": [
      {"description": "Block/scope", "code": "[ ... ] or { ... } or ( ... )", "example": "{ var x = 5 }", "id": "g-block"},
      {"description": "Comment", "code": "# ...", "example": "# some comment", "id": "g-comment"},
      {"description": "Multiline comment(nested)", "code": "#* ... *#", "example": "#* some \n multiline \n comment *#", "id": "g-comment-mn"},
      {"description": "Documentation comment", "code": "#- ... -#", "example": "#- params: \n @x : int -#", "id": "g-comment-d"},
      {"description": "Identifier regex", "code": "[A-Za-z_][A-Za-z_0-9]+", "example": "abc123", "id": "g-idregex"},
      {"description": "Case sensitivity", "code": "Sensitive", "id": "g-casesensitive"},
      {"description": "Default capitalization rules", "code": "CamelCase or camelcase", "example": "SomeName anothername", "id": "g-capitalization"}
    ],
    "general-operators": [
      {"description": "Addition", "code": "+", "example": "a + b", "id": "g-op-add"},
      {"description": "Substraction", "code": "-", "example": "a - b", "id": "g-op-sub"},
      {"description": "Multiplication", "code": "*", "example": "a * b", "id": "g-op-mul"},
      {"description": "Division", "code": "/", "example": "a / b", "id": "g-op-div-float"},
      {"description": "Exponentiation", "code": "^", "example": "a ^ b", "id": "g-op-exp"},
      {"description": "Modulo", "code": "%", "example": "a % b", "id": "g-op-modulo"}
    ]
  }
}
